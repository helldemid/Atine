<section class="products" id="products">
	<div class="container products__inner">
		<h2 class="products__title">
			<span>Наші</span>
			продукти</h2>
		<p class="products__subtitle">
			ATINE — одна формула в кількох формах випуску. Ви можете обрати той формат, який краще вписується у ваш режим лікування та відновлення.
		</p>
		<div class="products__content">
			<div class="products__left">
				<div class="swiper products-swiper">
					<div class="swiper-wrapper">

						{% for product in products %}
							<div class="swiper-slide">
								<img src="{{ products_base_path ~ '/' ~ product.image }}" alt="{{ product.name }}">
							</div>
						{% endfor %}

					</div>

					<div class="products__nav">
						<button class="slider-btn prev" aria-label="Previous">
							<svg class="slider-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
								<path d="m15 18-6-6 6-6"></path>
							</svg>
						</button>

						<button class="slider-btn next" aria-label="Next">
							<svg class="slider-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
								<path d="m9 18 6-6-6-6"></path>
							</svg>
						</button>
					</div>
				</div>
			</div>

			<div class="products__right">
				{% for product in products %}
					<div class="product-info {% if loop.first %}is-active{% endif %}" data-product-index="{{ loop.index0 }}">

						<h3><span class="company_name">ATINE®</span> {{ product.name }}</h3>
						<p class="desc">{{ product.description }}</p>
						<div class="subtitle">
							{% set parts = product.subtitle ? product.subtitle|split(',') : [] %}
							{% for part in parts %}
								<span>{{ part|trim }}</span>
								{% if not loop.last %}
								{% endif %}
							{% endfor %}
						</div>

						<div class="price">₴{{ product.price }}</div>

						{% include 'components/_order_form.html.twig' with {product: product} %}
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
</section>
